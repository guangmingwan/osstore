<config>
    <modules>
        <Luxe_MostViewed>
            <version>0.1.2</version>
        </Luxe_MostViewed>
    </modules>
    <global>
        <models>
            <mostviewed>
                <class>Luxe_MostViewed_Model</class>
            </mostviewed>
        </models>
        <blocks>
            <mostviewed>
                <class>Luxe_MostViewed_Block</class>
            </mostviewed>
        </blocks>
        <helpers>
            <mostviewed>
                <class>Luxe_MostViewed_Helper</class>
            </mostviewed>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mostviewed>
                                            <title>MostViewed</title>
                                        </mostviewed>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <mostviewed>
            <mostviewed>
                <num_displayed_products>9</num_displayed_products>
            </mostviewed>
        </mostviewed>
    </default>
</config>
