<?php endif; ?>


<?php echo $this->getChildHtml('available_deals_pager'); ?>
<div>


    
 <ul  class="awcp-category-grid">
     <?php $i = 0; foreach($this->getAvailableDeals() as $deal): ?>
      <li class="awcp-item <?php if(!$i || $i%2 == 0) { echo 'first'; } else { echo 'last'; } ?>">
