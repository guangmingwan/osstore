<?php if ($_products = $this->getProducts()): ?>
<p><h3><?php echo $this->__('Special Offer') ?></h3></p>
<table>
<?php $_columnCount = $this->getColumnCount(); ?>
<?php $i=0; foreach ($_products as $_product): ?>
