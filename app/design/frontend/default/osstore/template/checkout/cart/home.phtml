?>
<div class="home-cart">
    <div class="head">
        <?php $_cartQty = $this->getSummaryCount() ?>
         <?php echo $this->__('My Cart') ?> 
        
    </div>
 
 
    <?php if ($_cartQty>0): ?>
    <div class="content1"><p>
   
            <?php if ($_cartQty==1): ?>
                <?php echo $this->__('Have <a href="%s"><strong>1 item</strong></a> in your shopping cart.', $this->getUrl('checkout/cart')) ?>
            <?php else: ?>
                <?php echo $this->__('Have <a href="%s"><strong>%s items</strong></a> in your shopping cart.', $this->getUrl('checkout/cart'), $_cartQty) ?>
            <?php endif ?>
    
    </p></div>
    <?php else: ?>
    <div class="content1"><p><?php echo $this->__('You have no items in your shopping cart.') ?></p></div>
    <?php endif ?>
    
</div>
