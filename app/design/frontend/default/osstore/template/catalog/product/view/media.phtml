?>
<script src="<?php echo $this->getskinurl() ?>js/lightbox.js" type="text/javascript"></script>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
	$productname=$_helper->productAttribute($_product, $this->htmlEscape($_product->getName()), 'name');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image product-image-zoom">

        <?php
        $_img = '<img id="image_base" onclick=\'if(isFirefox=navigator.userAgent.indexOf('.'"'.'Firefox'.'"'.')>0){document.getElementById(thisobject).onclick();}else{document.getElementById(thisobject).click();}\' src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$productname.'" title="'.$productname.'" />';
        echo $_helper->productAttribute($_product, $_img, 'image')
    ?>
	
	<?php else: ?>

    <?php
	
        $_img = '<img id="image_base" onclick=\'if(isFirefox=navigator.userAgent.indexOf('.'"'.'Firefox'.'"'.')>0){document.getElementById(thisobject).onclick();}else{document.getElementById(thisobject).click();}\' src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$productname.'" />';
        echo $_helper->productAttribute($_product, $_img, 'image')
    ?>
	
<?php endif; ?>

</p>
<p class="a-center" id="track_hint"><?php echo $this->__('Click to view full picture') ?></p>

<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <h4><?php echo $this->__('More Views') ?></h4>
    <ul>
    <?php
         
         $i=0;
	 foreach ($this->getGalleryImages() as $_image): ?>
        <li>
            
			<?php
      
                        $i++;

			$basepic=$this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile());
			if(substr($this->htmlEscape($_image->getLabel()),0,1)=='+'):


			$bigpicsrc="http://image.sourceplaza.com/bigpic".substr($this->htmlEscape($_image->getLabel()),1);
			
			//$bigpicsrc=$this->getSkinUrl('bigpic').substr($this->htmlEscape($_image->getLabel()),1);
			else:
			$bigpicsrc=$basepic;
			endif;
			?>

			<script language="javascript">
                        if(document.getElementById("image_base").src=="<?php echo str_replace(" ","%20",$basepic); ?>"){
			var thisobject="abcd<?php echo $i; ?>";
                        }
                        </script>


		   <a id="abcd<?php echo $i; ?>"  href="<?php echo $bigpicsrc; ?>" rel="lightbox[0]" title="<?php echo $productname; ?>" target="_blank" ><img style="cursor:pointer"  onmousemove="document.getElementById('image_base').src='<?php echo $basepic; ?>';thisobject='abcd<?php echo $i; ?>';this.style.borderColor='#cacaca'"; src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(56); ?>"; alt="<?php echo $productname; ?>" title="Click to View Larger Image" onmouseout="this.style.borderColor='#ffffff'" /></a>
		   
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
