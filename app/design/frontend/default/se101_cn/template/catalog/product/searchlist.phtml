	function highLight($str, $keywords, $color = "#ff0000") {
	    
		   if (!count($keywords)) {
			   return $str;
		   }


		   foreach($keywords as $key=>$val) {
			   //$tvar = eregi($val, $str, $regs);
			   $finalrep    = "<font color=". $color . ">" . $val . "</font>";
			    $str = str_ireplace($val, $finalrep, $str);
		   }
		   //$str = str_ireplace($regs[$key], $finalrep, $str);
		   return $str;
		   
		   
		 }
