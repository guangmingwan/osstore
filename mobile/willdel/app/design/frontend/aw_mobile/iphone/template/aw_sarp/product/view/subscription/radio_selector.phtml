<?php $subscription = $this->getSubscription() ?>
<?php if ($subscription->getProduct()->getAwSarpEnabled()): ?>

<ul class="sarp-subscription options-list">
    <?php echo $this->__('Subscription type') ?>:

    <?php if (($types = $subscription->getSubscriptionTypes()) && (sizeof($types) > 1)): ?>

    <?php foreach ($types as $item): ?>
        <li><input class="radio" type="radio" name="aw_sarp_subscription_type" value="<?php echo $item['value']?>"
                   id="sarp_period_type_id<?php echo $item['value']?>"<?php if ($item['value'] == $subscription->getDefaultPeriodId()): ?>
                   checked="checked"<?php endif;?>/><span class="label"><label
                for="sarp_period_type_id<?php echo $item['value']?>"> <?php echo $item['label']?></label></span></li>
        <?php endforeach; ?>

    <?php elseif ($types && (count($types) == 1)): ?>
    <span><input type="hidden" name="aw_sarp_subscription_type"
                 value="<?php echo $types[0]['value']?>"/><?php echo $types[0]['label']?></span>
    <?php endif;?>
</ul>

<?php endif; ?>